<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Set your desired background color -->
            <corners android:radius="8dp" /> <!-- Set the radius for rounded corners -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#990000" /> <!-- Set your desired pressed background color -->
            <corners android:radius="8dp" /> <!-- Set the radius for rounded corners -->
        </shape>
    </item>

</selector>
